# vi: ft=conf

adjust-box-thickness = 150%
adjust-cell-height = 21
adjust-cursor-height = 47%
auto-update = off
command = {{ .fishBinPath }} --login --interactive
confirm-close-surface = false
cursor-invert-fg-bg = true
font-family = JetBrainsMono NFM
font-size = 16
macos-icon = retro 
macos-titlebar-style = hidden
mouse-hide-while-typing = true
quit-after-last-window-closed = true
theme = dark:Catppuccin Macchiato,light:Catppuccin Latte
window-colorspace = display-p3
window-padding-x = 0,0 
window-padding-y = 0,0 

# -- KEYBINDINGS -------------------------------------------------------------------------------------------------------

keybind = global:alt+escape=toggle_quick_terminal
keybind = ctrl+m=text:\x0D
keybind = shift+up=scroll_page_lines:-25
keybind = shift+down=scroll_page_lines:26
keybind = ctrl+—Å=text:\x03
keybind = shift+enter=text:\x1b\r
